  <div class="container">
    <h4>Your personal information:</h4>
    <div class="row">

      <div class="col-md-4">
        <div class="form-group fixed-height">
          <%= %>
          <%= f.input :name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "name" }%>v
           <%= f.input :age,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "age" }%>v
          <%= f.input :photo,
                     autofocus: true,
                     :input_html => { value: '#{@photo}'} %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>
      </div>

      <div class="col-md-8 fixed-height">
        <div class="form-group col-md-12">
          <%= f.input :address,
                     required: true,
                     input_html: { autocomplete: "address",
                     placeholder: 'your address' } %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :city,
                     required: true,
                     input_html: { autocomplete: "city",
                      placeholder: 'your city'} %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :country,
                 required: true,
                 input_html: { autocomplete: "country" },
                 placeholder: 'your country' %>
        </div>
        <div class="form-group col-md-6">
          <%= f.input :phone,
                     required: true,
                     input_html: { autocomplete: "phone" },
                     placeholder: 'your phone number' %>
        </div>
      </div>
  </div>

  <div class="container">
    <%= f.button :submit, "Sign up", :class => "btn btn-primary btn-lg" %>&nbsp;&nbsp;&nbsp;or&nbsp;
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>
</div>
