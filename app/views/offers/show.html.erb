<div class="page-title">
  <h2><%=  @offer.offer_title %></h2>
  <p><%= @offer.location_address %></p>
  <p>Host : <%= @offer.user.name %></p>
</div>

<div class="offer-content">
  <% if @offer.photos.attached? %>
    <% @offer.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  <% else %>
    <%= image_tag("default_shell.png") %>
  <% end %>
  <p><%= @offer.price_per_day %>â‚¬/day</p>
  <p><%= @offer.shell_type.capitalize %> for <%= @offer.capacity %> slug<%= @offer.capacity > 1 ? 's' : '' %></p>
  <p>Available from <%= @offer.start_available_time %> to <%= @offer.end_available_time %></p>
  <p><%= @offer.description %></p>
  <% if policy(Booking).create? %>
    <p><%= link_to 'Booking for this offer', new_offer_booking_path(@offer) %></p>
  <% end %>
  <p><%= link_to "Back", offers_path, class: "btn-infos" %></p>

  <% if policy(@offer).edit? %>
    <%= link_to "Edit your offer",edit_offer_path(@offer.id) %>
  <% end %>

  <% if policy(@offer).destroy? %>
    <%= link_to "Delete your offer",offer_path(@offer),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  <% end %>
</div>
