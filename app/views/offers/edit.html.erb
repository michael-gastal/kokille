<div class="form-container">
  <div class="form-group fixed-height">
    <h1 class="form-title">Change infos about your Shell 🐌</h1>
    <%= simple_form_for(@offer) do |f| %>
      <%= f.input :offer_title, label: "What is the new Title ?", placeholder: "Ex: Shell don Cooper", input_html: { class: "input-field" }, label_html: { class: 'label-field' } %>
      <%= f.input :location_address, label: "What is the new Address ?", placeholder: "Ex: 123 rue du Magnolia, 13009 Marseille", input_html: { class: "input-field" }, label_html: { class: 'label-field' } %>
      <%= f.input :shell_type, label: "What is the new kingd ?", placeholder: "Ex: Loft, T2, T3, etc.", input_html: { class: "input-field" }, label_html: { class: 'label-field' } %>
      <%= f.input :description, placeholder: "Ex: What do you have to say about your shell ? (Min 120 characters)", input_html: { class: "input-field" }, label_html: { class: 'label-field' } %>
      <%= f.input :capacity, label: "How many slugs can come in ?", placeholder: "Ex: 2", input_html: { class: "input-field" }, label_html: { class: 'label-field' } %>
      <%= f.input :price_per_day, label: "Fix your nex price (per night)", placeholder: "Ex: 65", input_html: { class: "input-field" }, label_html: { class: 'label-field' } %>
      <%= f.input :start_available_time, label: "My Shell is available from", input_html: { class: "input-field" }, label_html: { class: 'label-field' } %>
      <%= f.input :end_available_time, label: "Until", input_html: { class: "input-field" }, label_html: { class: 'label-field' } %>
      <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Add some photos", label_html: { class: 'label-field' } %>
      <%= f.button :submit, "Edit your Shell !", :class => "btn btn-submit btn-lg" %>
    <% end %>
  </div>
</div>
